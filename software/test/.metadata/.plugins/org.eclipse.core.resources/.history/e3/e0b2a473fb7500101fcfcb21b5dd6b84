#include "stm32f407xx.h"

#include "motor.h"

/******* STRUCTURES *********/
struct motor _motor1;

void EXTI0_IRQHandler(void);

void EXTI1_IRQHandler(void);


int main(void)
{
	motor_init(&_motor1);

    /* Loop forever */
	while(1){}
}

void EXTI0_IRQHandler(void){
	motor_run(&_motor1);
	EXTI->PR |= (1UL << 0);
}

void EXTI1_IRQHandler(void){
	motor_brake(&_motor1);
	EXTI->PR |= (1UL << 1);
}
